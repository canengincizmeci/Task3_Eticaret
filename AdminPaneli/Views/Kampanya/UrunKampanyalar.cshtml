@model List<KampanyaModel>
@{
    ViewData["Title"] = "UrunKampanyalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eae2f8;
    }

    .complaints-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        font-size: 1em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

        .complaints-table thead tr {
            background-color: rgba(41, 26, 65, 1);
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .complaints-table th,
        .complaints-table td {
            padding: 12px 15px;
        }

        .complaints-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .complaints-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .complaints-table tbody tr:last-of-type {
                border-bottom: 2px solid rgba(41, 26, 65, 1);
            }

            .complaints-table tbody tr:hover {
                background-color: #f1f1f1;
            }

        .complaints-table a {
            color: rgba(41, 26, 65, 1);
            text-decoration: none;
            font-weight: bold;
        }



            .complaints-table a:hover {
                color: rgba(41, 26, 20, 1);
            }

    .add-link-container {
        text-align: center;
        margin: 20px 0;
    }

        .add-link-container a {
            display: inline-block;
            padding: 10px 20px;
            background-color: rgba(41, 26, 65, 1);
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .add-link-container a:hover {
                background-color: rgba(41, 26, 20, 1);
            }
</style>

<table class="complaints-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kampanya Başlık</th>
            <th>Ürün Ad</th>
            <th>Açıklama</th>
            <th>İndirim Miktarı</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kampanya in Model)
        {
            <tr>
                <td>@kampanya._KampanyaId</td>
                <td>@kampanya._KampanyaBaslik</td>
                <td>@kampanya._UrunAd</td>
                @if (kampanya._KampanyaAciklama.ToString().Length > 50)
                {
                    <td>@kampanya._KampanyaAciklama.ToString().Substring(0, 50)...</td>
                }
                else
                {
                    <td>@kampanya._KampanyaAciklama</td>
                }
                <td>@kampanya._IndirimMiktari</td>
                <td>@kampanya._BaslangicTarihi</td>
                <td>@kampanya._BitisTarihi</td>
                <td><a href="@Url.Action("UrunKampanyaDetay","Kampanya",new {kampanyaId =kampanya._KampanyaId})">Detay</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="add-link-container">
    <a href="@Url.Action("UrunKampanyaEkle","Kampanya")">Ekle</a>
</div>

