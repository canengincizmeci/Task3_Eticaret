@{
    ViewData["Title"] = "KullanicilarListesi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eae2f8;
    }

    .complaints-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        font-size: 1em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

        .complaints-table thead tr {
            background-color: rgba(41, 26, 65, 1);
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .complaints-table th,
        .complaints-table td {
            padding: 12px 15px;
        }

        .complaints-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .complaints-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .complaints-table tbody tr:last-of-type {
                border-bottom: 2px solid rgba(41, 26, 65, 1);
            }

            .complaints-table tbody tr:hover {
                background-color: #f1f1f1;
            }

        .complaints-table a {
            color: rgba(41, 26, 65, 1);
            text-decoration: none;
            font-weight: bold;
        }

            .complaints-table a:hover {
                color: rgba(41, 26, 20, 1);
            }

        .complaints-table img {
            max-width: 100px;
            height: auto;
            display: block;
            margin: 0 auto;
        }
</style>

<table class="complaints-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Resim</th>
            <th>Adres</th>
            <th>Mail</th>
            <th>Kayıt Tarihi</th>
            <th>Mesaj Gönder</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var kullanici in Model)
        {
            <tr>
                <td>@kullanici.KullaniciId</td>
                <td>@kullanici.KullaniciAd</td>
                <td>
                    <img src="@Url.Content("~/images/" + kullanici.KullaniciResim)" />
                </td>
                <td>@kullanici.Adres</td>
                <td>@kullanici.Mail</td>
                <td>@kullanici.KayitTarihi</td>
                <td><a href="@Url.Action("KullaniciyaMesajGonder","Kullanici",new {kullaniciId=kullanici.KullaniciId})">Mesaj Gönder</a></td>
            </tr>
        }
    </tbody>
</table>


