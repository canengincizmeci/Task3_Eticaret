@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SifreDegistir</title>
    <link href="~/css/adminlogin.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
   
    <div class="container">
        <form action="@Url.Action("SifreDegistir","Admin")" method="post">
            @Html.AntiForgeryToken()
            <h1>Şifrenizi Değiştirin</h1>
            <div class="input-box">
                <input type="password" name="eskiSifre" required placeholder="Şifrenizi giriniz" />
                <i class='bx bxs-lock-alt'></i>
            </div>
            <div class="input-box">
                <input type="password" id="sifre1" name="yeniSifre" required placeholder="Yeni şifrenizi giriniz" />
                <i class='bx bxs-lock-alt'></i>
            </div>
           
            <button type="submit" class="btn">Gönder</button>
        </form>
    </div>
</body>
</html>
