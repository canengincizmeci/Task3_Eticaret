@using DB.Models
@model List<GenelKampanyalar>
@{
    ViewData["Title"] = "GeneralCampaigns";
    Layout = "~/Views/Shared/SellerCompanyLayout.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eae2f8;
    }

    .complaints-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        font-size: 1em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
        background-color: white;
        color: royalblue;
    }

        .complaints-table thead tr {
            background-color: #444;
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .complaints-table th,
        .complaints-table td {
            padding: 12px 15px;
        }

    ß .complaints-table tbody tr {
        border-bottom: 1px solid black;
    }

    .complaints-table tbody tr:nth-of-type(even) {
        background-color: #777;
    }

    .complaints-table tbody tr:last-of-type {
        border-bottom: 2px solid #444;
    }

    .complaints-table tbody tr:hover {
        background-color: aqua;
    }

    .complaints-table a {
        color: blue;
        text-decoration: none;
        font-weight: bold;
    }



        .complaints-table a:hover {
            color: darkblue;
        }

</style>

<table class="complaints-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kampanya Başlık</th>
            <th>Kampanya Açıklama</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>İndirim Miktarı</th>
            <th>Teknik ile iletişime geç</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var campaign in Model)
        {
            <tr>
                <td>@campaign.KampanyaId</td>
                <td>@campaign.KampanyaBaslik</td>
                <td>@campaign.KampanyaAciklama</td>
                <td>@campaign.BaslangicTarihi</td>
                <td>@campaign.BitisTarihi</td>
                <td>@campaign.IndirimMiktari</td>
                <td><a href="@Url.Action("MessageToSupport","Message")">Teknik ile iletişime geç</a></td>
            </tr>
        }
    </tbody>
</table>

