@model List<TopSellingCategoriesModel>
@{
    ViewData["Title"] = "TopSellingCategories";
    Layout = "~/Views/Shared/SellerCompanyLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<div>
    <canvas id="topSellingCategoriesChart"></canvas>
</div>



<script>
    var categories = @Html.Raw(Json.Serialize(Model.Select(m => m.CategoryName)));
    var amount = @Html.Raw(Json.Serialize(Model.Select(m => m.Amount)));

    var ctx = document.getElementById('topSellingCategoriesChart').getContext('2d');
    var topsellingChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: categories,
            datasets: [{
                label: 'Sales Count',
                data: amount,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWith: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>