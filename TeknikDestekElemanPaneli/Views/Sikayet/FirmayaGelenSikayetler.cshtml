@model FirmayaGelenSikayetlerModel
@{
    ViewData["Title"] = "FirmayaGelenSikayetler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eae2f8;
    }

    .complaints-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        font-size: 1em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

        .complaints-table thead tr {
            background-color: rgb(69, 133, 69);
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .complaints-table th,
        .complaints-table td {
            padding: 12px 15px;
        }

        .complaints-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .complaints-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .complaints-table tbody tr:last-of-type {
                border-bottom: 2px solid rgb(69, 133, 69);
            }

            .complaints-table tbody tr:hover {
                background-color: #f1f1f1;
            }

        .complaints-table a {
            color: rgb(69, 133, 69);
            text-decoration: none;
            font-weight: bold;
        }



            .complaints-table a:hover {
                color: rgb(69, 133, 69);
            }

</style>
<h1>Yorum Cevap Şikayetleri</h1>
<table class="complaints-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Şikayetci</th>
            <th>Firma</th>
            <th>Şikayet Metni</th>
            <th>Yorum</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var yorumSikayet in Model.kullanicidanFirmayaYorumSikayetler)
        {
            <tr>
                <td>@yorumSikayet.KullaniciYorumCevapSikayetId</td>
                <td>@yorumSikayet.KullaniciAd</td>
                <td>@yorumSikayet.FirmaAd</td>
                <td>@yorumSikayet.SikayetMetni</td>
                <td>@yorumSikayet.Yorum</td>
                <td><a href="@Url.Action("KullanicidanFirmayaYorumCevapSikayetDetay","Sikayet",new {sikayetId =yorumSikayet.KullaniciYorumCevapSikayetId})">Detay</a></td>
            </tr>
        }
    </tbody>
</table>

<h1>Genel Şikayetler</h1>
<table class="complaints-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Şikayetci</th>
            <th>Firma</th>
            <th>Şikayet Başlık</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var firmaSikayet in Model.kullanicidanFirmayaSikayetler)
        {
            <tr>
                <td>@firmaSikayet.SikayetId</td>
                <td>@firmaSikayet.KullaniciAd</td>
                <td>@firmaSikayet.FirmaAd</td>
                <td>@firmaSikayet.SikayetBaslik</td>
                <td><a href="@Url.Action("FirmadanGelenSikayetDetay","Sikayet",new {sikayetId =firmaSikayet.SikayetId})">Detay</a></td>
            </tr>
        }
    </tbody>
</table>


