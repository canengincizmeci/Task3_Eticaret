@model List<UrunModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eae2f8;
    }

    .complaints-table {
        width: 90%;
        border-collapse: collapse;
        margin: 20px auto;
        font-size: 1em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

    .complaints-table thead tr {
        background-color: rgb(69, 133, 69);
        color: #ffffff;
        text-align: left;
        font-weight: bold;
    }

    .complaints-table th,
    .complaints-table td {
        padding: 12px 15px;
    }

    .complaints-table tbody tr {
        border-bottom: 1px solid #dddddd;
    }

    .complaints-table tbody tr:nth-of-type(even) {
        background-color: #f3f3f3;
    }

    .complaints-table tbody tr:last-of-type {
        border-bottom: 2px solid rgb(69, 133, 69);
    }

    .complaints-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .complaints-table a {
        color: rgb(69, 133, 69);
        text-decoration: none;
        font-weight: bold;
    }

    .complaints-table a:hover {
        color: rgb(69, 133, 69);
    }

    .filter-section {
        width: 90%;
        margin: 20px auto;
        display: flex;
        justify-content: space-around;
        align-items: center;
        background-color: white;
        padding: 20px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .filter-section form {
        display: flex;
        align-items: center;
    }

    .filter-section label {
        margin-right: 10px;
        font-weight: bold;
    }

    .filter-section select,
    .filter-section button {
        padding: 10px;
        margin: 5px;
        font-size: 1em;
        border: 1px solid #cccccc;
        border-radius: 5px;
    }

    .filter-section button {
        background-color: rgb(69, 133, 69);
        color: white;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .filter-section button:hover {
        background-color: rgb(55, 100, 55);
    }
</style>

<div class="filter-section">
    <form method="get" action="@Url.Action("KategoriFiltreIndex", "Urun")">
        <label for="kategoriDropdown">Kategori:</label>
        <select id="kategoriDropdown" name="kategoriId">
            <option value="">Tüm Kategoriler</option>
            @foreach (var item in ViewBag.Ktg as List<SelectListItem>)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <button type="submit">Filtrele</button>
    </form>

    <form method="get" action="@Url.Action("FirmaFiltreIndex", "Urun")">
        <label for="firmaDropdown">Firma:</label>
        <select id="firmaDropdown" name="firmaId">
            <option value="">Tüm Firmalar</option>
            @foreach (var item in ViewBag.Frm as List<SelectListItem>)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <button type="submit">Filtrele</button>
    </form>
</div>

<table class="complaints-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün Ad</th>
            <th>Kategori Ad</th>
            <th>Firma Ad</th>
            <th>Fiyat</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>@urun.UrunId</td>
                <td>@urun.UrunAd</td>
                <td>@urun.KategoriAd</td>
                <td>@urun.FirmaAd</td>
                <td>@urun.Fiyat</td>
                <td><a href="@Url.Action("UrunDetay", "Urun", new { urunId = urun.UrunId })">Detay</a></td>
            </tr>
        }
    </tbody>
</table>
