@model List<RequestedShipmentsModel>
@{
    ViewData["Title"] = "RequestedShipments";
    Layout = "~/Views/Shared/ShippingCompanyLayout.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eae2f8;
    }

    .complaints-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        font-size: 1em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

        .complaints-table thead tr {
            background-color: rgb(38, 147, 151);
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .complaints-table th,
        .complaints-table td {
            padding: 12px 15px;
        }

    ß .complaints-table tbody tr {
        border-bottom: 1px solid #dddddd;
    }

    .complaints-table tbody tr:nth-of-type(even) {
        background-color: #f3f3f3;
    }

    .complaints-table tbody tr:last-of-type {
        border-bottom: 2px solid rgb(38, 147, 151);
    }

    .complaints-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .complaints-table a {
        color: rgb(38, 147, 151);
        text-decoration: none;
        font-weight: bold;
    }



        .complaints-table a:hover {
            color: rgb(19, 75, 77);
        }

</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".dispatch-shipment").click(function (e) {
            e.preventDefault();
            var url = $(this).attr("href");
            if (confirm("Kargoyu yola çıkartmak ister misiniz")) {
                $.ajax({
                    type: "POST",
                    url: url,
                    success: function (response) {
                        if (response.success) {
                            alert("Kargo başarıyla yola çıkarıldı");
                            location.reload();
                        }
                        else {
                            alert(response.message || "Bir hata oluştu")

                        }
                    },
                    error: function () {
                        alert("Bir hata oluştu");
                    }
                })
            }
        })
    })
</script>



<table class="complaints-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Satıcı Firma</th>
            <th>Ürünler</th>
            <th>Kullanıcıdan Alınacak Adres</th>
            <th>Firmaya Teslim Edilecek Adres</th>
            <th>Talep Tarihi</th>
            <th>Yola Çıkart</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.RequestedShipmentId</td>
                <td>@request.SellerCompanyName</td>
                <td>
                    @for (int i = 0; i < request.ProductsId.Count; i++)
                    {
                       
                        @($"{request.ProductsName[i]},")
                    }
                </td>
                <td>@request.ShippingAdress</td>
                <td>@request.SellerCompanyAdres</td>
                <td>@request.Date</td>
                <td><a class="dispatch-shipment" href="@Url.Action("DispatchShipment","Shipping",new {shipmentId=request.RequestedShipmentId})">Yola Çıkart</a></td>
            </tr>
        }
    </tbody>
</table>
