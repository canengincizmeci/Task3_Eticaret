@model List<RequestedShipmentsModel>
@{
    ViewData["Title"] = "RequestedShipments";
    Layout = "~/Views/Shared/ShippingCompanyLayout.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eae2f8;
    }

    .complaints-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        font-size: 1em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

        .complaints-table thead tr {
            background-color: rgb(38, 147, 151);
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .complaints-table th,
        .complaints-table td {
            padding: 12px 15px;
        }

    ß .complaints-table tbody tr {
        border-bottom: 1px solid #dddddd;
    }

    .complaints-table tbody tr:nth-of-type(even) {
        background-color: #f3f3f3;
    }

    .complaints-table tbody tr:last-of-type {
        border-bottom: 2px solid rgb(38, 147, 151);
    }

    .complaints-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .complaints-table a {
        color: rgb(38, 147, 151);
        text-decoration: none;
        font-weight: bold;
    }



        .complaints-table a:hover {
            color: rgb(19, 75, 77);
        }

</style>
<table class="complaints-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Şehir</th>
            <th>Eklenme Tarihi</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.RequestedShipmentId</td>
                <td>@request.SellerCompanyName</td>
                @for (int i = 0; i < request.ProductsId.Count; i++)
                {
                    <td>@request.ProductsName[i]</td>
                }
                <td><a href="@Url.Action("DispatchShipment","Shipping",new {shipmentId=request.RequestedShipmentId})" >Yola Çıkart</a></td>
            </tr>
        }
    </tbody>
</table>
