@model List<DispatchedShipmentsModel>
@{
    ViewData["Title"] = "DispatchedShipment";
    Layout = "~/Views/Shared/ShippingCompanyLayout.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eae2f8;
    }

    .complaints-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        font-size: 1em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

        .complaints-table thead tr {
            background-color: rgb(38, 147, 151);
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .complaints-table th,
        .complaints-table td {
            padding: 12px 15px;
        }

    ß .complaints-table tbody tr {
        border-bottom: 1px solid #dddddd;
    }

    .complaints-table tbody tr:nth-of-type(even) {
        background-color: #f3f3f3;
    }

    .complaints-table tbody tr:last-of-type {
        border-bottom: 2px solid rgb(38, 147, 151);
    }

    .complaints-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .complaints-table a {
        color: rgb(38, 147, 151);
        text-decoration: none;
        font-weight: bold;
    }



        .complaints-table a:hover {
            color: rgb(19, 75, 77);
        }
</style>


<table class="complaints-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Satıcı Firma</th>
            <th>Kullanici Ad</th>
            <th>Gidiş Adresi</th>
            <th>Teslim Tarihi</th>
            <th>İade Talebi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shipment in Model)
        {
            <tr>
                <td>@shipment.DispatchedShipmentId</td>
                <td>@shipment.SalerCompanyName</td>
                <td>@shipment.RecipientName</td>
                <td>@shipment.DestinationAdressName</td>
                <td>@shipment.ShipmentDate</td>
                @if ((bool)shipment.ReturnRequest)
                {
                    <td>İade Edildi</td>
                }
                else
                {
                    <td>Direk Teslim Edildi</td>
                }
            </tr>
        }
    </tbody>
</table>

