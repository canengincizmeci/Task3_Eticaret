
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<style>
    .search-container {
        text-align: center;
        display: flex;
        align-items: center;
        margin-top: 10px;
        margin-bottom: 10px;
        width: 100%;
    }

    .search-button {
        /* width: 100%;
                    padding: 10px;
                    margin: 0 auto;
                    border: none;
                    border-radius: 10px;
                    overflow: hidden; */
        width: 100%;
        padding: 15px;
        border: none;
        border-radius: 10px;
        overflow: hidden;
        font-size: 12px;
    }

        .search-button:focus {
            outline: none;
            border: 1px solid orangered;
        }

        .search-button:hover {
            outline: none;
            border: 1px solid orangered;
        }

    .search-btn {
        padding: 8px;
    }

    .search-btn {
        padding: 12px;
        background-color: #333;
        color: white;
        border-radius: 5px;
        cursor: pointer;
    }

    .search-wrapper {
        /* display: flex;
                    width: 70%; */
        display: inline-block;
        width: 50%;
    }

    .search-btn i {
        font-size: 14px;
    }
</style>
<div class="search-wrapper">
    <form action="@Url.Action("Search","Home")" method="post">
        @Html.AntiForgeryToken()
        <div class="search-container">
            <input type="text" name="_word" required class="search-button" placeholder="Ürün Adı Giriniz" />
            <button type="submit" class="search-btn">
                <i class='bx bx-search-alt-2'></i>
            </button>
        </div>
    </form>
</div>