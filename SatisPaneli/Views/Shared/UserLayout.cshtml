<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;
            padding: 0;
            background-color: orange;
            color: #e0e0e0;
        }

        nav {
            background-color: darkorange;
        }

        .top-menu {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: space-between;
        }

            .top-menu li {
                position: relative;
                display: inline-block;
            }

            .top-menu a {
                display: block;
                color: #e0e0e0;
                text-align: center;
                padding: 14px 20px;
                text-decoration: none;
            }

                .top-menu a:hover {
                    background-color: orangered;
                }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: darkorange;
            min-width: 160px;
            z-index: 1;
            top: 100%;
            left: 0;
        }

            .dropdown-content a {
                color: #e0e0e0;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .dropdown-content a:hover {
                    background-color: orangered;
                }

        .top-menu li:hover .dropdown-content {
            display: block;
        }

        .top-menu li p {
            margin: 0;
            padding: 14px 20px;
            color: #e0e0e0;
            cursor: pointer;
        }

    </style>
    <script>
        $(document).ready(function () {
            $.getJSON("@Url.Action("UserTotalCardItem", "Cart")", function (data) {
                $("#productCount").text("Sepetim (" + data.productCount + ")");
            })
        });
    </script>
</head>
<body>
    <nav>
        <ul class="top-menu">
            <div class="ilkLinkler">
            <li><a href="@Url.Action("UserIndex","User")">Anasayfa</a></li>
            <li><a href="@Url.Action("FrequentlyAskedQuestions","Home")">Sıkça Sorulanlar</a></li>
            <li><a href="@Url.Action("Inbox","Message")">İletişim</a></li>
            <li>
                <p>Başvurular</p>
                <div class="dropdown-content">
                    <a href="@Url.Action("SupportApplication","Application")">Teknik Eleman Başvuru</a>
                    <a href="@Url.Action("CompanyApplication","Application")">Firma Başvuru</a>
                </div>
            </li>
            </div>
            <div class="sonLinkler">
            <li><a href="@Url.Action("ProductsToBeShipped","Cargo")">Kargolarım</a></li>
            <li><a href="@Url.Action("Orders","Order")">Siparişlerim</a></li>
            <li>
                <a href="@Url.Action("ViewUserCart", "Cart")">
                    <span id="productCount">0</span>

                </a>
            </li>
            <li><a href="@Url.Action("UserProfile","User")">Profil</a></li>
            <li><a href="@Url.Action("VisitorIndex","Home")">Çıkış Yap</a></li>
            </div>
        </ul>
    </nav>




    <div>
        @RenderBody()
    </div>
</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>