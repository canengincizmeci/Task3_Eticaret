@using DB.Models
@model List<Urun>
@{
    ViewData["Title"] = "VisitorIndex";
    Layout = "~/Views/Shared/VisitorLayout.cshtml";
}
@* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"> *@
<style>
    .productContainer {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 20px;
        width: 80%;
    }

    .productBox {
        width: 200px;
        padding: 10px;
        background-color: orangered;
        text-align: center;
        border: 1px solid orange;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .productBox a {
            text-decoration: none;
        }

        .productBox:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .productBox img {
            width: 100%;
            height: auto;
            object-fit: cover;
            max-width: 100%;
            transition: opacity 0.3s ease;
        }

        .productBox:hover img {
            opacity: 0.7;
        }

    .main {
        display: flex;
        gap: 10px;
    }

    .dynamic-advertisements {
        display: flex;
        width: 80%;
        text-align: center;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .search-filter-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        gap: 20px;
        margin-bottom: 20px;
    }

    .productBtn {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        background-color: white;
        color: black;
        padding: 8px 12px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .productBox:hover .productBtn {
        opacity: 1;
    }
</style>
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>



<div class="dynamic-advertisements">
    @await Component.InvokeAsync("Competition")
    @await Component.InvokeAsync("Giveaways")
    @await Component.InvokeAsync("Coupons")
    @await Component.InvokeAsync("Campaigns")
</div>

<div class="search-filter-wrapper">

    @{
        await Html.RenderPartialAsync("SearchPartialView");
        await Html.RenderPartialAsync("FilterPartialView");
    }
</div>



<div class="main">
    <div class="categotyContainer">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="productContainer">
        @foreach (var product in Model)
        {
            <div class="productBox">


                @* <h1>@product.UrunAd</h1> *@
                <img src="@Url.Content("~/images/"+ product.UrunResim)" />
                <h4>@product.UrunAd</h4>
                <a class="productBtn" href="@Url.Action("ProductDetails","Product",new {productId=product.UrunId})">İncele</a>

            </div>
        }
    </div>
</div>