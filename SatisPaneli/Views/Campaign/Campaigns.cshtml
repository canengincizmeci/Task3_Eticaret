@model CampaignsModel
@{
    ViewData["Title"] = "Campaigns";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container">

    <div class="text-center p-3 mb-4 bg-light border" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#campaignDetails">
        Kategori  Kampanyaları Görüntüle
    </div>

    <div id="campaignDetails" class="collapse">
        @foreach (var categoryCampaign in Model.categoryCampaigns!)
        {
            <div class="card mb-5">
                <div class="card-header text-center bg-danger text-white">
                    <h2 class="h4">@categoryCampaign.CampaignTitle</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-3 text-center bg-secondary text-white p-2">
                            <strong>Kategori:</strong> @categoryCampaign.CategoryName
                        </div>
                        <div class="col-6 bg-light p-2">
                            <p>@categoryCampaign.CampaignDescription</p>
                        </div>
                        <div class="col-3 text-center bg-primary text-white p-2">
                            <p>% @categoryCampaign.DiscountAmount indirim</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col bg-dark text-white p-2 text-center">
                            <p>Kampanya Tarihleri: @categoryCampaign.StartDate - @categoryCampaign.EndDate</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    @if (ViewBag.Role == "User")
                    {
                        <a class="btn btn-success" href="@Url.Action("UserIndex", "User", new { categoryId = categoryCampaign.CategoryId })">Kampanyaya Giren Ürünler</a>
                    }
                    else
                    {
                        <a class="btn btn-success" href="@Url.Action("VisitorIndex", "Home", new { categoryId = categoryCampaign.CategoryId })">Kampanyaya Giren Ürünler</a>
                    }
                </div>
            </div>
        }
    </div>
</div>
